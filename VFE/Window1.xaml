<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="VFE.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:VFE="clr-namespace:VFE"
	Height="300"
	Width="300"
	Title="Vuki's FileExplorer"
	MinWidth="640"
	MinHeight="480" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Icon="pack://application:,,,/VFE;component/icon.ico">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<TextBox
			Height="20"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top"
			Margin="0,47.2,0,0"
			Grid.ColumnSpan="2" />
		<Menu
			Height="20"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top"
			Margin="0,-1.2,0,0"
			Grid.ColumnSpan="2">
			<MenuItem
				VerticalAlignment="Stretch"
				Header="File">
				<MenuItem
					Header="New" />
				<MenuItem
					Header="New Window" />
				<Separator />
				<MenuItem
					Header="Copy" />
				<MenuItem
					Header="Paste" />
				<Separator />
				<MenuItem
					Header="Exit"></MenuItem>
			</MenuItem>
			<MenuItem
				VerticalAlignment="Stretch"
				Header="About">
				<MenuItem
					Header="Settings" />
				<MenuItem
					Header="Themes" />
				<Separator />
				<MenuItem
					Header="About"></MenuItem>
			</MenuItem>
		</Menu>
		<Grid Grid.Row="1">
			<!-- Define Columns: Columns 1 and 3 are 8px wide for easier dragging. -->
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="1*"
					MinWidth="100" />
				<ColumnDefinition
					Width="2" />
				<!-- Space for the vertical GridSplitter -->
				<ColumnDefinition
					MinWidth="200"
					Width="1.60923633604275*" />
			</Grid.ColumnDefinitions>
			<!-- ============================================= -->
			<!-- Content Panels (The 6 main cells) -->
			<!-- ============================================= -->
			<!-- Top Left (Row 0, Column 0) -->
			<Border
				Grid.Row="0"
				Grid.Column="0"
				BorderBrush="#333"
				BorderThickness="1"
				CornerRadius="5">
				<TreeView
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						x:Name="FolderView"
						ItemsSource="{Binding RootFolders}">
						<TreeView.ItemContainerStyle>
							<Style
								TargetType="{x:Type TreeViewItem}">
								<!-- 
					            *** ENSURE THIS IS BOUND TO 'IsExpanded' and not 'HasChildren' ***
					            The 'Mode=OneWay' is also important.
					            -->
								<Setter
									Property="IsExpanded"
									Value="{Binding IsExpanded, Mode=OneWay}" />
								<!-- This ensures our C# method is called when the user clicks the expander -->
								<EventSetter
									Event="Expanded"
									Handler="TreeViewItem_Expanded" />
							</Style>
						</TreeView.ItemContainerStyle>
						<!-- 
			            This HierarchicalDataTemplate tells the TreeView how to render
			            a FileSystemItem object and how to find its children. 
			            -->
						<TreeView.Resources>
							<HierarchicalDataTemplate
								DataType="{x:Type VFE:FileSystemItem}"
								ItemsSource="{Binding Children}">
								<StackPanel
									Orientation="Horizontal">
									<!-- Icon based on type (using simple text/symbols for C# 5.0 compatibility) -->
									<TextBlock
										FontWeight="Bold"
										Foreground="#007ACC">
										<TextBlock.Style>
											<Style
												TargetType="TextBlock">
												<Setter
													Property="Text"
													Value="ðŸ“ " />
												<Style.Triggers>
													<DataTrigger
														Binding="{Binding Type}"
														Value="{x:Static VFE:ItemType.File}">
														<Setter
															Property="Text"
															Value="ðŸ“„ " />
														<Setter
															Property="Foreground"
															Value="#333333" />
													</DataTrigger>
													<DataTrigger
														Binding="{Binding Type}"
														Value="{x:Static VFE:ItemType.Drive}">
														<Setter
															Property="Text"
															Value="ðŸ–´ " />
														<Setter
															Property="Foreground"
															Value="#2ECC71" />
													</DataTrigger>
												</Style.Triggers>
											</Style>
										</TextBlock.Style>
									</TextBlock>
									<!-- The name of the item -->
									<TextBlock
										Text="{Binding Name}"
										Margin="5,0,0,0" />
									<!-- Show FullPath in a subtle way -->
									<TextBlock
										Text="{Binding FullPath, StringFormat=' ({0})'}"
										Foreground="#999"
										FontSize="10"
										VerticalAlignment="Center"
										Margin="5,0,0,0">
										<TextBlock.Style>
											<Style
												TargetType="TextBlock">
												<!-- Only show path for drives and folders -->
												<Style.Triggers>
													<DataTrigger
														Binding="{Binding Type}"
														Value="{x:Static VFE:ItemType.File}">
														<Setter
															Property="Visibility"
															Value="Collapsed" />
													</DataTrigger>
												</Style.Triggers>
											</Style>
										</TextBlock.Style>
									</TextBlock>
								</StackPanel>
							</HierarchicalDataTemplate>
						</TreeView.Resources>
					</TreeView>
			</Border>
			<!-- Top Right (Row 0, Column 4) -->
			<Border
				Grid.Row="0"
				Grid.Column="4"
				BorderBrush="#333"
				BorderThickness="1"
				CornerRadius="2">
				<ListView
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch" />
			</Border>
			<!-- ============================================= -->
			<!-- GridSplitters (The resize handles) -->
			<!-- ============================================= -->
			<!-- VERTICAL SPLITTER 1 (Working correctly) -->
			<GridSplitter
				Grid.Column="1"
				Grid.RowSpan="3"
				Background="#FFFFFF"
				HorizontalAlignment="Center"
				VerticalAlignment="Stretch"
				ShowsPreview="True"
				Width="2"
				Cursor="SizeWE"
				ResizeBehavior="PreviousAndNext"
				ToolTip="Resize" />
		</Grid>
	</Grid>
</Window>